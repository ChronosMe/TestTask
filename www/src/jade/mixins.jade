//- Может попробовать через each с объектами, типа "type":"mail". Или через массив-объект со свойствами.
mixin formv(myid, myclass, myutm, myname, mymail, myphone, myquest)
    form(id=myid, class='uk-form '+ myclass, action="javascript:void(null);" method="POST")
        // UTM
        if myutm
            input(type="hidden" name="utm_source" class="source" value!="<?php echo isset($_GET['utm_source']) ? $_GET['utm_source'] : '' ;?>")
            input(type="hidden" name="utm_term" value!="<?php echo isset($_GET['utm_term']) ? $_GET['utm_term'] : '' ;?>")
            input(type="hidden" name="utm_type" value!="<?php echo isset($_GET['utm_type']) ? $_GET['utm_type'] : '' ;?>")
            input(type="hidden" name="utm_content" value!="<?php echo isset($_GET['utm_content']) ? $_GET['utm_content'] : '' ;?>")
            input(type="hidden" name="utm_medium" value!="<?php echo isset($_GET['utm_medium']) ? $_GET['utm_medium'] : '' ;?>")
            input(type="hidden" name="utm_campaign" value!="<?php echo isset($_GET['utm_campaign']) ? $_GET['utm_campaign'] : '' ;?>")

        // Fieldset
        fieldset
            input(type="hidden" name="fransh" class="source" value="")
            if myname
                input(class=myname placeholder="Ваше имя*" type="text" required minlength="2" name="name")
            if mymail
                input(class="" placeholder="Ваш телефон*" type="text" required minlength="2" name="phone")
            if myphone
                input(class="" placeholder="Ваш email*" type="email" required minlength="2" name="email")
            if myquest
                textarea(class="uk-width-1-1" placeholder="Ваш вопрос" minlength="2" name="vopros")
            button(type="submit" class="uk-button") Отправить

//- Сетка с иконками
mixin gridico(mywidth)
    .uk-grid(class='uk-grid-width-' + mywidth)
        - each val, key in gridico
            li
                div
                    .pic
                        img(src='img/' + key + '.jpg')
                    p #{val}


