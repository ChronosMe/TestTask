//- UK Слайдер
mixin uk-slider(mywidth)
    div(data-uk-slider)
        .uk-slider-container
            ul(class='uk-slider uk-grid-width-medium-'+mywidth)
                block
            a(class="uk-slidenav uk-slidenav-contrast uk-slidenav-previous" data-uk-slider-item="previous")
            a(class="uk-slidenav uk-slidenav-contrast uk-slidenav-next" data-uk-slider-item="next")

//- Слайдер из массива
mixin uk-slider-arr(mywidth, myarr)
    div(data-uk-slider)
        .uk-slider-container
            ul(class='uk-slider uk-grid-width-medium-'+mywidth)
                - each slide in myarr
                    li
                        div
                            img(src='img/' + slide + '.png')
            a(class="uk-slidenav uk-slidenav-contrast uk-slidenav-previous" data-uk-slider-item="previous")
            a(class="uk-slidenav uk-slidenav-contrast uk-slidenav-next" data-uk-slider-item="next")

//- Слайдер из массива без фикс
mixin uk-slider-arr-nofix(myarr)
    div(data-uk-slider)
        .uk-slider-container
            ul(class='uk-slider')
                - each slide in myarr
                    li
                        div
                            img(src='img/' + slide + '.png')
            a(class="uk-slidenav uk-slidenav-contrast uk-slidenav-previous" data-uk-slider-item="previous")
            a(class="uk-slidenav uk-slidenav-contrast uk-slidenav-next" data-uk-slider-item="next")

//- Сетка фикс
mixin uk-fgrd(mywidth)
    ul(class='uk-grid uk-grid-width-medium-' + mywidth)
        block

//- Li > div > block
mixin lidivblock(myclass)
    li
        div(class=myclass)
            block

//- Li > div > block
mixin li-divblock(myclass)
    li(class=myclass)
        div
            block

//- Контейнер-фикс-сетка
mixin uk-cont-fgrd(width, classmy)
    .uk-block(class=classmy)
        .uk-container.uk-container-center
            ul.uk-grid(class='uk-grid uk-grid-width-medium-'+width)
                block


//- Контейнер-блок
mixin uk-cont-blk(myclass)
    .uk-block(class=myclass)
        .uk-container.uk-container-center
            block

//- Контейнер с классом и заголовком h2
mixin uk-cont-blk-h2(myclass, myh2)
    .uk-block(class=myclass)
        .uk-container.uk-container-center
            h2=myh2
            block

//- Контейнер с классом и заголовком h3
mixin uk-cont-blk-h3(myclass, myh3)
    .uk-block(class=myclass)
        .uk-container.uk-container-center
            h3=myh3
            block

//- Контейнер с классом, заголовком h3 и сеткой
mixin uk-cont-h3-fgrd(mywidth, myclass, myh3)
    .uk-block(class=myclass)
        .uk-container.uk-container-center
            h3=myh3
            ul.uk-grid(class='uk-grid uk-grid-width-medium-' + mywidth)
                block

